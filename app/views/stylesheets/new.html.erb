<%= content_tag :nav, class: "navbar navbar-default" do %>
  <%= content_tag :div, class: "container-fluid" do %>
    <%= content_tag :div, class: "navbar-header" do %>
      <%= content_tag(:div, "Website Theming Service", class: "navbar-brand") %>
    <% end %>
  <% end %>
<% end %>

<%= content_tag :div, class: "container" do %>

  <% if flash[:url] %>
    <%= content_tag :div, class: "row" do %>
      <%= content_tag :div, class: "col-md-6" do %>
        <%= content_tag :div, class: "panel panel-success" do %>
          <%= content_tag(:div, "Customized stylesheet will be available at the following url in a few seconds", class: "panel-heading") %>
          <%= content_tag :div, class: "panel-body" do %>
            <%= flash[:url] %>
          <% end %>
        <% end %>
      <% end %>
    <% end %>
  <% end %>


  <%= form_for @stylesheet, url: {action: "create"} , :html => {:class => "form-horizontal"} do |f| %>

    <% if @stylesheet.errors.any? %>
      <%= content_tag :div, class: "row" do %>
        <%= content_tag :div, class: "col-md-6" do %>
          <% @stylesheet.errors.full_messages.each do |msg| %>
            <%= content_tag :div, msg, class: "alert alert-danger", role:"alert"  %>
          <% end %>
        <% end %>
      <% end %>
    <% end %>

    <%= content_tag :div, class: "form-group" do %>
      <%= f.label :text_color, 'Text Color', class: "col-md-2 control-label" %>
      <%= content_tag :div, class: "col-md-3" do %>
        <%= f.select(:text_color, options_for_select([
          [include_blank: 'None'],
          ['Grey', '#000'],
          ['Green', '#009999'],
          ['Blue', '#5bc0de']
          ]), {}, {class: "form-control"} ) %>
        <% end %>
    <% end %>

    <%= content_tag :div, class: "form-group" do %>
      <%= f.label :link_color, 'Link Color', class: "col-md-2 control-label" %>
      <%= content_tag :div, class: "col-md-3" do %>
        <%= f.select(:link_color, options_for_select([
          [include_blank: 'None'],
          ['Grey', '#000'],
          ['Green', '#009999'],
          ['Blue', '#5bc0de']
          ]), {}, {class: "form-control"} ) %>
        <% end %>
    <% end %>


     <%= content_tag :div, class: "form-group" do %>
      <%= f.label :font_family, 'Font Family', class: "col-md-2 control-label" %>
      <%= content_tag :div, class: "col-md-3" do %>
        <%= f.select(:font_family, options_for_select([
          [include_blank: 'None'],
          ['Sans Serif', '"Helvetica Neue", Helvetica, Arial, sans-serif'],
          ['Serif', 'Georgia, "Times New Roman", Times, serif'],
          ['Monospace', 'Menlo, Monaco, Consolas, "Courier New", monospace']
          ]), {}, {class: "form-control"} ) %>
        <% end %>
    <% end %>

    <%= content_tag :div, class: "row" do %>
      <%= content_tag :div, class: "col-md-6" do %>
        <%= f.submit 'Create Stylesheet', :class => 'pull-right btn btn-primary' %>
      <% end %>
    <% end %>

  <% end %>

<% end %>
